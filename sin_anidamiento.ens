                        BZ  $5                                       ;  true #1 (5 bc opcode1+op1.1+op1.2+opcode2+op2.1 
                        MOVE #0 , #0[.IX]                            ;  equal ? false
                        BR  $3                                       ;  skip next instr (3 bc opcode+op1+op2)
                        MOVE #1 , #0[.IX]                            ;  equal ? true
; termina ==
