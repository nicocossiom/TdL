;termina asignacion de string
; empieza +
                        ADD #0 , #-100                               ;   add op1, op2
                        MOVE .A , #0[.IX]                            ;  move accumulator to result
; termina +
                        ADD #129, .IY                                ;  .R4 = .IY + 129 = operand address
                        MOVE .A, .R4                                 
                        MOVE #0[.IX] , [.R4]                         ;   assign op1 to res
; empieza ==
                        ADD #129, .IY                                ;  .R3 = .IY + 129 = operand address
