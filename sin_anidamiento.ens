copy_0_loop:
                        MOVE [.R5], [.R6]                            ;  #offset[/op1] -> #offset[/res]
                        INC .R5                                      ;  aumentamos la posicion de la que leemos
                        INC .R6                                      ;   aumentamos la posicion en la que escribimos
                        INC .R7                                      ;  aumentamos el contador del bucle
                        CMP #7 , .R7                                 
