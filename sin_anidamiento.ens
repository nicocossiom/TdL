                        BR  $3                                       ;  skip next instr (3 bc opcode+op1+op2)
                        MOVE #1 , #1[.IX]                            ;  equal ? true
; termina ==
; empieza || 
                        OR #0[.IX] , #1[.IX]                         ;   or op1, op2
                        MOVE .A , #0[.IX]                            ;  move accumulator to result
; termina ||
; empieza ==
                        ADD #129, .IY                                ;  .R3 = .IY + 129 = operand address
